{
  "name": "mcp-simple-server-wrapper",
  "version": "1.0.0",
  "description": "A simple MCP server wrapper for the bakery-client API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js http",
    "start:ngrok": "node dist/index.js http --ngrok",
    "dev": "tsc -w & node --watch dist/index.js",
    "dev:http": "tsc -w & node --watch dist/index.js http",
    "dev:ngrok": "tsc -w & node --watch dist/index.js http --ngrok",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "claude",
    "bakery-client"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "ngrok": "^4.3.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "typescript": "^5.2.2"
  }
}
